  ci = commit
  fo = fetch origin
  d = !git --no-pager diff
  dt  = difftool
  stat = !git --no-pager diff --stat
  
[core]
  pager = less -FRSX
  #editor = code --wait
  editor = vim

[color]
  branch = auto
  diff = auto
  interactive = auto
